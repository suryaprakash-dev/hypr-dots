[manager]
cwd = { fg = "#bdcbaf", bold=true}

hovered         = { fg = "#c6eeaa", bg = "#2f4f1b" }
preview_hovered = { underline = true, bold=true }


[status]
separator_open  = ""
separator_close = ""
separator_style = { fg = "#c6eeaa", bg = "#2f4f1b" }

# Mode
mode_normal = { fg = "#193706",   bg = "#abd290", bold = true }
mode_select = { fg = "#283420", bg = "#bdcbaf", bold = true }
mode_unset  = { fg = "#003737",  bg = "#a0cfcf", bold = true }

[which]
mask            = { bg = "#1d211a" }
cand            = { fg = "#abd290" }
desc            = { fg = "#bdcbaf" }
separator       = " îªœ "
separator_style = { fg = "#a0cfcf" }

[filetype]
rules = [
	# Images
	{ mime = "image/*", fg = "#bdcbaf" },

	# Videos
	{ mime = "video/*", fg = "#a0cfcf" },
	{ mime = "audio/*", fg = "#a0cfcf" },

	# Archives
	{ mime = "application/zip",             fg = "#ffb4ab" },
	{ mime = "application/gzip",            fg = "#ffb4ab" },
	{ mime = "application/x-tar",           fg = "#ffb4ab" },
	{ mime = "application/x-bzip",          fg = "#ffb4ab" },
	{ mime = "application/x-bzip2",         fg = "#ffb4ab" },
	{ mime = "application/x-7z-compressed", fg = "#ffb4ab" },
	{ mime = "application/x-rar",           fg = "#ffb4ab" },

	# Fallback
	{ name = "*", fg = "#abd290", bold=true },
	{ name = "*/", fg = "#bdcbaf", bold=true }
]
